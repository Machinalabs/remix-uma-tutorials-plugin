{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@remixproject/plugin": "^0.3.3",
    "@remixproject/plugin-iframe": "^0.3.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "bootstrap": "^4.5.3",
    "ethers": "^5.0.24",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.0",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "react-test-renderer": "^17.0.1",
    "styled-components": "^5.2.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4",
    "web3-utils": "^1.3.1"
  },
  "scripts": {
    "start": "PORT=8080 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --verbose=false --silent=false",
    "eject": "react-scripts eject",
    "test:ci": "CI=true react-scripts test",
    "tslint": "tslint -c tslint.json src/**/*.{ts,tsx} --fix --format verbose",
    "tslint:fix": "tslint --fix -p . -c tslint.json",
    "prettier:check": "prettier --write --list-different './src/**/*.tsx'",
    "prettier": "prettier --write \"src/**/*.{ts,,tsx,js,json}\"",
    "deploy": "yarn build && surge --project ./build --domain machinalabs-remix-uma-tutorials-plugin.surge.sh"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.1.6",
    "@types/rebass": "^4.0.7",
    "@types/styled-components": "^5.1.7",
    "coveralls": "^3.1.0",
    "husky": "^4.3.6",
    "prettier": "^2.2.1",
    "surge": "^0.21.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn tslint && yarn prettier:check && yarn test:ci && yarn build"
    }
  },
  "resolutions": {
    "styled-components": "^5"
  }
}
